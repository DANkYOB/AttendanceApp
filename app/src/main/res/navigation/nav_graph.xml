<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nelsonfinalyearproject.Home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateClassFragment"
            app:destination="@id/updateClassFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateClassListFragment"
            app:destination="@id/updateClassListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mondayScheduleFragment2"
            app:destination="@id/mondayScheduleFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_tuesdayFragment"
            app:destination="@id/tuesdayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_wednesdayFragment"
            app:destination="@id/wednesdayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_thursdayFragment"
            app:destination="@id/thursdayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fridayFragment"
            app:destination="@id/fridayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.nelsonfinalyearproject.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/profileMenuFragment"
        android:name="com.example.nelsonfinalyearproject.profile.ProfileMenuFragment"
        android:label="ProfileMenuFragment"
        tools:layout="@layout/fragment_profile_menu">
        <action
            android:id="@+id/action_profileMenuFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profileMenuFragment_to_myProfileFragment"
            app:destination="@id/myProfileFragment" />
        <action
            android:id="@+id/action_profileMenuFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.nelsonfinalyearproject.Settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_passwordChangeFragment"
            app:destination="@id/passwordChangeFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateClassFragment"
        android:name="com.example.nelsonfinalyearproject.Settings.UpdateClassFragment"
        android:label="UpdateClassFragment"
        tools:layout="@layout/fragment_update_class"/>
    <fragment
        android:id="@+id/passwordChangeFragment"
        android:name="com.example.nelsonfinalyearproject.Settings.PasswordChangeFragment"
        android:label="PasswordChangeFragment"
        tools:layout="@layout/fragment_password_change"/>
    <fragment
        android:id="@+id/updateClassListFragment"
        android:name="com.example.nelsonfinalyearproject.Settings.UpdateClassListFragment"
        android:label="UpdateClassListFragment"
        tools:layout="@layout/fragment_update_class"/>
    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.example.nelsonfinalyearproject.profile.MyProfileFragment"
        android:label="MyProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_myProfileFragment_to_totalAttendanceFragment"
            app:destination="@id/totalAttendanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/totalAttendanceFragment"
        android:name="com.example.nelsonfinalyearproject.profile.TotalAttendanceFragment"
        android:label="TotalAttendanceFragment"
        tools:layout="@layout/fragment_total_attendance"/>
    <fragment
        android:id="@+id/mondayScheduleFragment2"
        android:name="com.example.nelsonfinalyearproject.Home.ClassSchedule.MondayScheduleFragment"
        android:label="MondayScheduleFragment"
        tools:layout="@layout/fragment_moday_schedule"/>
    <fragment
        android:id="@+id/tuesdayFragment"
        android:name="com.example.nelsonfinalyearproject.Home.ClassSchedule.TuesdayFragment"
        android:label="TuesdayFragment"
        tools:layout="@layout/fragment_tuesday_schedule"/>
    <fragment
        android:id="@+id/wednesdayFragment"
        android:name="com.example.nelsonfinalyearproject.Home.ClassSchedule.WednesdayFragment"
        android:label="WednesdayFragment"
        tools:layout="@layout/fragment_wednesday_schedule"/>
    <fragment
        android:id="@+id/thursdayFragment"
        android:name="com.example.nelsonfinalyearproject.Home.ClassSchedule.ThursdayFragment"
        android:label="ThursdayFragment"
        tools:layout="@layout/fragment_thursday_schedule"/>
    <fragment
        android:id="@+id/fridayFragment"
        android:name="com.example.nelsonfinalyearproject.Home.ClassSchedule.FridayFragment"
        android:label="FridayFragment"
        tools:layout="@layout/fragment_friday_schedule"/>
    <activity
        android:id="@+id/cameraFragment"
        android:name="com.example.nelsonfinalyearproject.camera.CameraFragment"
        android:label="CameraFragment" />
</navigation>