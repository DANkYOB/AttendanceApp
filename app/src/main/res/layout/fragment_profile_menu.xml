<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="161dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="top"
        android:text="Profile"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="27dp"
        tools:src="@drawable/ic_profile_pic"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Purab Jyoti Kashyap"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Information Technology"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_medium"
        android:text="220102013"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_department" />

    <ImageView
        android:id="@+id/edit_profile"
        style="@style/ClickableView"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_frame_35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_roll_no" />

    <TextView
        android:id="@+id/action_my_profile"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        style="@style/ClickableViewBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingVertical="12dp"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:text="My Profile"
        app:drawableStartCompat="@drawable/ic_profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile"
        />

    <TextView
        android:id="@+id/action_setting1"
        android:text="Settings"
        android:layout_marginTop="30dp"
        android:paddingVertical="12dp"
        style="@style/ClickableViewBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_13"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawablePadding="25dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_my_profile"
        app:drawableStartCompat="@drawable/ic_settings_outline"
        app:drawableEndCompat="@drawable/ic_chevron_right" />

    <TextView
        android:id="@+id/action_notifications"
        style="@style/ClickableViewBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:drawablePadding="25dp"
        android:layout_marginRight="25dp"
        android:drawableStart="@drawable/ic_bell"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:layout_marginTop="30dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_group_14"
        android:fontFamily="@font/poppins_medium"
        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_setting1" />

    <TextView
        android:id="@+id/action_about"
        style="@style/ClickableViewBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:paddingVertical="12dp"
        android:drawableStart="@drawable/ic_exclamation_circle"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:src="@drawable/ic_group_48"
        android:text="About"
        android:drawablePadding="25dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_notifications" />

    <TextView
        android:id="@+id/action_logout"
        style="@style/ClickableViewBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="25dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_group_48"
        android:text="Logout"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_about" />


</androidx.constraintlayout.widget.ConstraintLayout>