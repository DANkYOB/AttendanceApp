<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/btn_back"
        style="@style/ClickableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:padding="16dp"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="40dp"
        android:text="Monday Class Schedule"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />


    <TextView
        android:id="@+id/sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_4"
        android:text="PROJECT-Stage II \n(EC421)\n\n9:10AM - 11:30AM"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_4"
        android:fontFamily="@font/poppins_bold"
        android:padding="16dp"
        android:layout_marginEnd="25dp"
        android:text="EC419  (RKB) \n\n\n11:30AM - 12:30PM"
        app:layout_constraintBottom_toBottomOf="@+id/sub1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub1" />

    <TextView
        android:id="@+id/sub2"
        android:layout_width="162dp"
        android:layout_height="111dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_4"
        android:fontFamily="@font/poppins_bold"
        android:padding="16dp"
        android:text="Break Time\n\n\n1:30PM - 2:30PM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_4"
        android:fontFamily="@font/poppins_bold"
        android:padding="16dp"
        android:layout_marginEnd="25dp"
        android:text="PROJECT-Stage II \n(EC421)\n\n2:30PM - 5:30PM"
        app:layout_constraintBottom_toBottomOf="@+id/sub2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub2" />




</androidx.constraintlayout.widget.ConstraintLayout>