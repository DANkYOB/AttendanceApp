<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/btn_back"
        style="@style/ClickableView"
        tools:ignore="ContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="80dp"
        android:text="Course Timetable"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="136dp" />

    <View
        android:id="@+id/choose_file_to_upload"
        android:layout_width="325dp"
        android:layout_height="78dp"
        style="@style/ClickableView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:background="@drawable/rectangle_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ClickableView"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_upload_2"
        app:layout_constraintEnd_toEndOf="@+id/choose_file_to_upload"
        app:layout_constraintStart_toStartOf="@+id/choose_file_to_upload"
        app:layout_constraintTop_toTopOf="@+id/choose_file_to_upload" />

    <TextView
        android:id="@+id/textView7"
        style="@style/ClickableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Choose file to upload"
        app:layout_constraintBottom_toBottomOf="@+id/choose_file_to_upload"
        app:layout_constraintEnd_toEndOf="@+id/choose_file_to_upload"
        app:layout_constraintStart_toStartOf="@+id/choose_file_to_upload" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_frame_45"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_file_to_upload" />


</androidx.constraintlayout.widget.ConstraintLayout>